generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String             @id @default(uuid())
  username               String
  email                  String             @unique
  password               String
  role                   Int                @default(4) // 1: admin, 2: director, 3:staff, 4: guest
  location               Location?          @relation(fields: [locationId], references: [id])
  locationId             String?
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt
  cashbook               cashbook[]
  loggedCommunications   CommunicationLog[] @relation("LoggedByUser")
  directorCommunications CommunicationLog[] @relation("DirectorUser")
  DirectorLedger         DirectorLedger[]
  resetPasswordToken     String?
  resetPasswordExpires   DateTime?
}

model Location {
  id               String             @id @default(uuid())
  name             String             @unique
  address          String?
  batches          Batch[]
  users            User[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  cashbook         cashbook[]
  DirectorLedger   DirectorLedger[]
  CommunicationLog CommunicationLog[]

  @@map("locations")
}

model Batch {
  id               String         @id @default(uuid())
  name             String
  year             Int
  startDate        DateTime?
  location         Location       @relation(fields: [locationId], references: [id])
  locationId       String
  course           Course         @relation(fields: [courseId], references: [id])
  courseId         String
  tutor            String?
  coordinator      String?
  slotLimit        Int            @default(30)
  currentCount     Int            @default(0)
  status           BatchStatus    @default(PENDING)
  students         Student[]
  description      String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  fromBatchHistory batchHistory[] @relation("FromBatchHistory")
  toBatchHistory   batchHistory[] @relation("ToBatchHistory")
  Fee              Fee[]

  @@map("batches")
}

enum BatchMode {
  ONLINE
  OFFLINE
  COMBINED
}

enum BatchStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELLED
}

model Course {
  id          String    @id @default(uuid())
  name        String    @unique
  description String
  baseFee     Float
  duration    Int
  mode        BatchMode
  batches     Batch[]
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("courses")
}

model Student {
  id              String  @id @default(uuid())
  admissionNo     String  @unique
  name            String
  email           String?
  phone           String
  address         String?
  salesperson     String?
  isFundedAccount Boolean @default(false)
  referralInfo    String?
  currentBatch    Batch   @relation(fields: [currentBatchId], references: [id])
  currentBatchId  String

  fees     Fee[]
  payments Payment[]

  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  batchHistory     batchHistory[]
  cashbook         cashbook[]
  DirectorLedger   DirectorLedger[]
  CommunicationLog CommunicationLog[]

  @@map("students")
}

model Fee {
  id             String  @id @default(uuid())
  totalCourseFee Int
  finalFee       Int?
  discountAmount Int?    @default(0)
  advanceAmount  Int?
  balanceAmount  Int?
  feePaymentMode String?
  status         String  @default("PENDING")

  student   Student @relation(fields: [studentId], references: [id])
  studentId String

  batch   Batch  @relation(fields: [batchId], references: [id])
  batchId String

  payments Payment[]

  batchHistoryFrom batchHistory[] @relation("FeeFromBatchHistory")
  batchHistoryTo   batchHistory[] @relation("FeeToBatchHistory")

  transferId String?

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  cashbooks       cashbook[]
  directorLedgers DirectorLedger[]

  @@map("fees")
}

model Payment {
  id               String          @id @default(uuid())
  amount           Int
  mode             String?
  paidAt           DateTime?
  dueDate          DateTime?
  transactionId    String?
  note             String?
  status           String          @default("PENDING")
  student          Student         @relation(fields: [studentId], references: [id])
  studentId        String
  fee              Fee             @relation(fields: [feeId], references: [id])
  feeId            String
  cashbook         cashbook?       @relation(fields: [cashbookId], references: [id])
  cashbookId       String?         @unique
  directorLedger   DirectorLedger? @relation(fields: [directorLedgerId], references: [id])
  directorLedgerId String?         @unique
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  @@map("payments")
}

model batchHistory {
  id String @id @default(uuid())

  // Batches involved
  fromBatch   Batch  @relation("FromBatchHistory", fields: [fromBatchId], references: [id])
  fromBatchId String
  toBatch     Batch  @relation("ToBatchHistory", fields: [toBatchId], references: [id])
  toBatchId   String

  student   Student @relation(fields: [studentId], references: [id])
  studentId String

  // Fees before and after transfer
  feeIdFrom String? @map("fee_id_from")
  feeFrom   Fee?    @relation("FeeFromBatchHistory", fields: [feeIdFrom], references: [id])

  feeIdTo String? @map("fee_id_to")
  feeTo   Fee?    @relation("FeeToBatchHistory", fields: [feeIdTo], references: [id])

  // Unique transfer ID
  transferId String @default(uuid())

  changeDate DateTime
  reason     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("batchHistories")
}

model cashbook {
  id              String           @id @default(uuid())
  transactionDate DateTime
  transactionType String           @default("STUDENT_PAID") // 'STUDENT_PAID' | 'OFFICE_EXPENSE' | 'OWNER_TAKEN';
  amount          Int
  debitCredit     String           @default("CREDIT") // 'DEBIT' | 'CREDIT'
  description     String?
  referenceId     String? // e.g., Payment ID or Expense ID
  location        Location         @relation(fields: [locationId], references: [id])
  locationId      String
  student         Student?         @relation(fields: [studentId], references: [id])
  studentId       String?
  director        User?            @relation(fields: [directorId], references: [id])
  directorId      String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  directorLedgers DirectorLedger[]
  payments        Payment[]
  fee             Fee?             @relation(fields: [feeId], references: [id])
  feeId           String?

  @@map("cashbooks")
}

model DirectorLedger {
  id              String   @id @default(uuid())
  director        User?    @relation(fields: [directorId], references: [id])
  directorId      String
  transactionDate DateTime
  transactionType String // 'STUDENT_PAID' | 'OTHER_EXPENSE' | 'FROM_OFFICE' | 'OWNER_TAKEN' 
  amount          Int
  debitCredit     String // 'DEBIT' or 'CREDIT'
  description     String?
  referenceId     String? // e.g., Payment ID or Expense ID

  student   Student? @relation(fields: [studentId], references: [id])
  studentId String?

  location   Location? @relation(fields: [locationId], references: [id])
  locationId String

  cashbookId String? // e.g., Cashbook ID created when owner taken entry added in cashbook
  cashbook   cashbook? @relation(fields: [cashbookId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  payments  Payment[]
  fee       Fee?      @relation(fields: [feeId], references: [id])
  feeId     String?

  @@map("director_ledgers")
}

model CommunicationLog {
  id   String   @id @default(cuid())
  date DateTime @default(now())

  loggedBy   User   @relation("LoggedByUser", fields: [loggedById], references: [id])
  loggedById String

  director   User?   @relation("DirectorUser", fields: [directorId], references: [id])
  directorId String?

  type    String // "Call", "Message", "Note", "Reminder"
  subject String?
  message String

  student   Student? @relation(fields: [studentId], references: [id])
  studentId String?
  batchId   String?

  location   Location? @relation(fields: [locationId], references: [id])
  locationId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("communication_logs")
}
