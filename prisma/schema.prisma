generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  username   String
  email      String    @unique
  password   String
  role       Int       @default(1) // 1: staff, 2: director, 3:Admin
  location   Location? @relation(fields: [locationId], references: [id])
  locationId String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Location {
  id        String   @id @default(uuid())
  name      String   @unique
  address   String?
  batches   Batch[]
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("locations")
}

model Batch {
  id           String      @id @default(uuid())
  name         String
  year         Int
  startDate    DateTime?
  location     Location    @relation(fields: [locationId], references: [id])
  locationId   String
  course       Course      @relation(fields: [courseId], references: [id])
  courseId     String
  tutor        String?
  coordinator  String?
  slotLimit    Int         @default(30)
  currentCount Int         @default(0)
  mode         BatchMode
  status       BatchStatus @default(PENDING)
  students     Student[]
  description  String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("batches")
}

enum BatchMode {
  ONLINE
  OFFLINE
}

enum BatchStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELLED
}

model Course {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  baseFee     Float
  duration    Int
  batches     Batch[]
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("courses")
}

model Student {
  id              String   @id @default(uuid())
  admissionNo     String   @unique
  name            String
  email           String?
  phone           String
  address         String?
  salesperson     String?
  isFundedAccount Boolean  @default(false)
  currentBatch    Batch    @relation(fields: [currentBatchId], references: [id])
  currentBatchId  String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("students")
}
